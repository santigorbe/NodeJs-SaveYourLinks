<div class="container"> 
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center mt-3">
                <div class="card-header">
                    <h3>SignIn</h3>
                </div>
                <div class="card-body">
                    <img src="img/icono.png" alt="Logo Santiago Gorbea" class="card-img-top mx-auto m-2 rounded-circle w-50">
                    <form action="/singin" method="POST">
                        <div class="mt-3">
                            <input type="text" name="username" placeholder="Username" class="form-control">
                        </div>
                        <div class="mt-3">
                            <input type="password" name="password" class="form-control" placeholder="Password">
                        </div>
                        <div class="mt-2">
                            <a href="/singup" class="mx-auto">create an account</a>
                        </div>
                        <div class="mt-3">
                            <button class="btn btn-success w-100">Singin</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>